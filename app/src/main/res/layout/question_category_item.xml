<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/categoryImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_round_16_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="categoryName"
        android:id="@+id/categoryNameTextView"
        android:textAppearance="@style/quickSand_16_medium_black"
        android:layout_alignBottom="@id/categoryImageView"
        android:layout_alignTop="@id/categoryImageView"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/categoryImageView"
        android:layout_marginLeft="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Gray"
        android:layout_marginTop="8dp"
        android:layout_below="@id/categoryImageView"/>

</RelativeLayout>